<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WriteCheckList">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_aptName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="TextView"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.093"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.051" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"

                    android:text="현장사진"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="52dp"
                    tools:layout_editor_absoluteY="81dp" />

                <Button
                    android:id="@+id/btn_addPhoto"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:text="추가"
                    android:textSize="10sp"
                    android:padding="2dp"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginEnd="5dp"
                    app:srcCompat="@drawable/photobutton" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginEnd="5dp"
                    app:srcCompat="@drawable/photobutton" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginEnd="5dp"
                    app:srcCompat="@drawable/photobutton" />

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="단지 체크리스트"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="52dp"
                tools:layout_editor_absoluteY="81dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TableRow android:background="@drawable/table_row_background">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1.5"
                        android:background="@drawable/table_inside_gray"
                        android:gravity="center"
                        android:padding="10sp"
                        android:text="주차장"
                        android:textSize="15sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4.5"
                        android:background="@null"
                        android:padding="10sp"
                        android:textSize="15sp" />

                </TableRow>

                <TableRow android:background="@drawable/table_row_background">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1.5"
                        android:background="@drawable/table_inside_gray"
                        android:gravity="center"
                        android:padding="10sp"
                        android:text="동간거리"
                        android:textSize="15sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4.5"
                        android:background="@null"
                        android:padding="10sp"
                        android:textSize="15sp" />

                </TableRow>

                <TableRow android:background="@drawable/table_row_background">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1.5"
                        android:background="@drawable/table_inside_gray"
                        android:gravity="center"
                        android:padding="10sp"
                        android:text="관리/조경"
                        android:textSize="15sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4.5"
                        android:background="@null"
                        android:padding="10sp"
                        android:textSize="15sp" />

                </TableRow>

                <TableRow android:background="@drawable/table_row_background">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1.5"
                        android:background="@drawable/table_inside_gray"
                        android:gravity="center"
                        android:padding="10sp"
                        android:text="학교환경"
                        android:textSize="15sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4.5"
                        android:background="@null"
                        android:padding="10sp"
                        android:textSize="15sp" />

                </TableRow>

                <TableRow android:background="@drawable/table_row_background">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1.5"
                        android:background="@drawable/table_inside_gray"
                        android:gravity="center"
                        android:padding="10sp"
                        android:text="편의시설"
                        android:textSize="15sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4.5"
                        android:background="@null"
                        android:padding="10sp"
                        android:textSize="15sp" />

                </TableRow>

                <TableRow android:background="@drawable/table_row_background">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1.5"
                        android:background="@drawable/table_inside_gray"
                        android:gravity="center"
                        android:padding="10sp"
                        android:text="교통"
                        android:textSize="15sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4.5"
                        android:background="@null"
                        android:padding="10sp"
                        android:textSize="15sp" />

                </TableRow>

            </TableLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="매물 체크리스트"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="52dp"
                tools:layout_editor_absoluteY="81dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TableRow android:background="@drawable/table_row_background">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1.5"
                        android:background="@drawable/table_inside_gray"
                        android:gravity="center"
                        android:padding="10sp"
                        android:text="동/호수"
                        android:textSize="15sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4.5"
                        android:background="@null"
                        android:padding="10sp"
                        android:textSize="15sp" />

                </TableRow>

                <TableRow android:background="@drawable/table_row_background">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1.5"
                        android:background="@drawable/table_inside_gray"
                        android:gravity="center"
                        android:padding="10sp"
                        android:text="평형(전용)"
                        android:textSize="15sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4.5"
                        android:background="@null"
                        android:padding="10sp"
                        android:textSize="15sp" />

                </TableRow>

                <TableRow android:background="@drawable/table_row_background">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1.5"
                        android:background="@drawable/table_inside_gray"
                        android:gravity="center"
                        android:padding="10sp"
                        android:text="예상총액"
                        android:textSize="15sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="4.5"
                        android:background="@null"
                        android:padding="10sp"
                        android:textSize="15sp" />

                </TableRow>

            </TableLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="저장"
                android:layout_marginEnd="50dp"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="삭제" />

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>