<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WriteCheckList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_aptName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.093"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.051" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현장사진 추가"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            tools:layout_editor_absoluteX="52dp"
            tools:layout_editor_absoluteY="81dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="135dp"
                android:layout_height="134dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.727"
                app:layout_constraintStart_toEndOf="@+id/imageView1"
                app:srcCompat="@android:drawable/ic_menu_gallery"
                tools:layout_editor_absoluteY="123dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="135dp"
                android:layout_height="134dp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:srcCompat="@android:drawable/ic_menu_gallery" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="단지 체크리스트"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                tools:layout_editor_absoluteX="52dp"
                tools:layout_editor_absoluteY="81dp" />
            
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TableRow
                    android:background="@drawable/table_row_background">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:text="주차장"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:background="@drawable/table_inside_gray"
                        android:layout_gravity="center_horizontal"/>

                    <EditText
                        android:id="@+id/parking"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="4.5"
                        android:background="@null"
                        android:layout_gravity="center_horizontal"/>

                </TableRow>

                <TableRow
                    android:background="@drawable/table_row_background">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:text="동간거리"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:background="@drawable/table_inside_gray"
                        android:layout_gravity="center_horizontal"/>

                    <EditText
                        android:id="@+id/dong_dist"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="4.5"
                        android:background="@null"
                        android:layout_gravity="center_horizontal"/>

                </TableRow>

                <TableRow
                    android:background="@drawable/table_row_background">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:text="관리/조경"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:background="@drawable/table_inside_gray"
                        android:layout_gravity="center_horizontal"/>

                    <EditText
                        android:id="@+id/management"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="4.5"
                        android:background="@null"
                        android:layout_gravity="center_horizontal"/>

                </TableRow>

                <TableRow
                    android:background="@drawable/table_row_background">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:text="학교환경"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:background="@drawable/table_inside_gray"
                        android:layout_gravity="center_horizontal"/>

                    <EditText
                        android:id="@+id/school_env"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="4.5"
                        android:background="@null"
                        android:layout_gravity="center_horizontal"/>

                </TableRow>

                <TableRow
                    android:background="@drawable/table_row_background">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:text="편의시설"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:background="@drawable/table_inside_gray"
                        android:layout_gravity="center_horizontal"/>

                    <EditText
                        android:id="@+id/facilities"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="4.5"
                        android:background="@null"
                        android:layout_gravity="center_horizontal"/>

                </TableRow>

            </TableLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="매물 체크리스트"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                tools:layout_editor_absoluteX="52dp"
                tools:layout_editor_absoluteY="81dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TableRow
                    android:background="@drawable/table_row_background">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:text="동/호수"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:background="@drawable/table_inside_gray"
                        android:layout_gravity="center_horizontal"/>

                    <EditText
                        android:id="@+id/dong"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="4.5"
                        android:background="@null"
                        android:layout_gravity="center_horizontal"/>

                </TableRow>

                <TableRow
                    android:background="@drawable/table_row_background">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:text="평형(전용)"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:background="@drawable/table_inside_gray"
                        android:layout_gravity="center_horizontal"/>

                    <EditText
                        android:id="@+id/area"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="4.5"
                        android:background="@null"
                        android:layout_gravity="center_horizontal"/>

                </TableRow>

                <TableRow
                    android:background="@drawable/table_row_background">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:text="예상총액"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:background="@drawable/table_inside_gray"
                        android:layout_gravity="center_horizontal"/>

                    <EditText
                        android:id="@+id/total_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="4.5"
                        android:background="@null"
                        android:layout_gravity="center_horizontal"/>

                </TableRow>

            </TableLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:text="저장"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/delete"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14" />


</androidx.constraintlayout.widget.ConstraintLayout>